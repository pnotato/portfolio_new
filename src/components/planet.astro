	}
	
	.stars-2:nth-child(6) {
		width:10px;
		height:10px;
		background: linear-gradient(to right, transparent, $pink);
		left: 420px;
		top:-50px;
	}
	.stars-2:nth-child(7) {
		width:8px;
		height:8px;
		background: linear-gradient(to right, transparent, $purple2);
		left: 350px;
		top:-70px;
		
		animation-delay: 0.8s;
		animation-duration: 1s;
	}
}

.moon {
	width:100px;
	height:100px;
	border-radius: 100%;
	background: linear-gradient(150deg, $blue 55%, $fuscia 98%);
	position:absolute;
	top: 20%; 
    left: 10%;
	animation: planet-moving2 2s ease infinite;
	animation-delay: 0.5s;
	animation-fill-mode: both;
	will-change: transform;
	
}


@include keyframes(planet-moving) {
	0%{top:30%}
	50%{top:31%}
	100%{top:30%}
}

@include keyframes(planet-moving2) {
	0% { transform: translateY(0); }
	50% { transform: translateY(4px); }
	100% { transform: translateY(0); }
}
@include keyframes(twinkle-height) {
	0% { height: 20px;top:-7px}
	50% { height: 10px; top:-3px}
	100% { height: 20px;top:-7px}
}

@include keyframes(twinkle-width) {
	0% { width: 20px;left:0px}
	50% { width: 10px; left:5px}
	100% { width: 20px;left:0px}
}

@include keyframes(twinkle) {
	0%{opacity:0}
	50%{opacity:1}
	100%{opacity:0}
}
