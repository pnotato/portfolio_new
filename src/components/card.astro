---
const { label, image, link = '#' } = Astro.props;
const src = typeof image === 'string' ? image : (image?.src ?? image);
---

<div class="card">
  <div class="card-label">
    <div class="card-label-bg"></div>
    <a href={link} class="card-label-text button">{label}</a>
  </div>
  <div class="card-image">
    <img src={src} alt={label} loading="lazy" />
  </div>
</div>

<style>
  .card {
    display: block;
    border: 5px solid white;
    position: relative;

    overflow: hidden;
    text-decoration: none;
    color: inherit;
    width: clamp(280px, 40vw, 600px);
    aspect-ratio: 16 / 10;
    height: auto;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
    display: flex;
    align-items: center;
  }

  .card-label-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5));
    z-index: -1;
  }

  .card-label-text {
    position: relative;
    padding: 0.75rem;
    font-size: 1.3rem;
    font-weight: 600;

    text-decoration: none;
  }
</style>